{
  "name": "bungaacord-desktop",
  "version": "1.3.1",
  "description": "Desktop client for BungaaCord voice chat",
  "main": "main.js",
  "scripts": {
    "start": "copy .env.test .env && electron .",
    "build": "electron-builder --win",
    "build-and-publish": "electron-builder --win -p always",
    "build-portable": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.bungaacord.desktop",
    "productName": "BungaaCord Desktop",
    "directories": {
      "output": "dist"
    },
    "publish": [{
      "provider": "github",
      "owner": "BungaaFACE",
      "repo": "BungaaCord",
      "releaseType": "release"
    }],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "BungaaCord Desktop"
    },
    "files": [
      "main.js",
      "preload.js",
      "screen-capture.js",
      "screen-select-menu.js",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "../templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../static",
        "to": "static",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "dotenv": "^17.2.3"
  },
  "author": "BungaaFACE",
  "license": "MIT",
  "homepage": "https://github.com/BungaaFACE/BungaaCord",
  "dependencies": {
    "application-loopback": "^1.2.7",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}
